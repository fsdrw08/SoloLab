# Host vyos
#     StrictHostKeyChecking no
#     HostName 192.168.255.1
#     User vagrant
#     IdentityFile ~/.ssh/vagrant
#     Port 22

Host vyos
    HostName 192.168.255.1
    User vyos
    Port 22
    UserKnownHostsFile /dev/null
    StrictHostKeyChecking no
    PasswordAuthentication no
    IdentityFile ~/.ssh/vagrant
    IdentitiesOnly yes
    LogLevel FATAL

